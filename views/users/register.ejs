<% layout('layouts/boilerplate') %>


<div class="container justify-content-center align-items-center mt-3">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1602391833977-358a52198938?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h2 class="card-title">Register an Account</h2>
          <form action="/register" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">UserName:</label>
              <input
                type="text"
                name="username"
                id="username"
                required
                class="form-control"
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email:</label>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password:</label>
              <input
                type="password"
                name="password"
                id="password"
                required
                class="form-control"
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">Register</button>
            </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
