<% layout('layouts/boilerplate') %>

<div class="container justify-content-center align-items-center mt-3">
  <div class="row">
    <div class="col-md-8 offset-md-2 col-xl-6 offset-xl-3">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center">Create New Campground</h2>
          <form
            action="/campgrounds"
            method="POST"
            class="needs-validation"
            novalidate
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="titel" class="form-label">Title:</label>
              <input
                type="text"
                name="campground[title]"
                id="title"
                placeholder="Camp Title"
                required
                class="form-control"
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="image" class="form-label">Images:</label>
              <input
                type="file"
                name="image"
                multiple
                class="form-control"
                id="image"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="location" class="form-label">Location:</label>
              <input
                type="text"
                name="campground[location]"
                id="location"
                placeholder="Where it's at"
                required
                class="form-control"
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description:</label>
              <textarea
                name="campground[description]"
                id="description"
                class="form-control"
                required
              ></textarea>
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Price:</label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input
                  type="number"
                  id="price"
                  name="campground[price]"
                  class="form-control"
                  placeholder="0"
                  aria-label="price"
                  aria-describedby="price-label"
                  min="0"
                  step="0.01"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success">Save</button>
            </div>
          </form>
          <div class="mt-2">
            <a href="/campgrounds">Back</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
